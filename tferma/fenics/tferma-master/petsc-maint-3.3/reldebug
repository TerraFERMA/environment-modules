#%Module1.0
proc ModulesHelp { } {
        global dotversion

        puts stderr "\tSets environment for tferma/fenics tferma-master with petsc-maint-3.3."
}
module-whatis "Sets environment for FEniCS release."
prepend-path LD_LIBRARY_PATH "/usr/local/tferma/fenics/tferma-master/petsc-maint-3.3/reldebug/lib"
prepend-path PATH "/usr/local/tferma/fenics/tferma-master/petsc-maint-3.3/reldebug/bin"
prepend-path PKG_CONFIG_PATH "/usr/local/tferma/fenics/tferma-master/petsc-maint-3.3/reldebug/lib/pkgconfig"
prepend-path PYTHONPATH "/usr/local/tferma/fenics/tferma-master/petsc-maint-3.3/reldebug/lib/python2.7/site-packages:/usr/local/tferma/fenics/tferma-master/petsc-maint-3.3/reldebug/lib/python2.7/dist-packages"
prepend-path MANPATH "/usr/local/tferma/fenics/tferma-master/petsc-maint-3.3/reldebug/share/man"

# Variable to help find dolfin-config.cmake
#setenv DOLFIN_CMAKE_CONFIG_PATH "/usr/local/FEniCS-rel/share/cmake"

# Special Mac variables
prepend-path DYLD_FRAMEWORK_PATH "/opt/local/Library/Frameworks"

module load tferma/petsc/maint-3.3/opt

