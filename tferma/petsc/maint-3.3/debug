#%Module1.0#####################################################################
##
## modules modulefile
##
proc ModulesHelp { } {
    global mpich_bin

    puts stderr "\tThis module sets environment variables for"
    puts stderr "\tusing PETSc version 3.3, optimized, with a"
    puts stderr "\tlocal mpi and gnu compilers"
    puts stderr ""
}

module-whatis   "PETSc 3.3 debug environment using Ubuntu's openmpi and gnu compilers"

set     petsc_dir /usr/local/tferma/petsc
set     petsc_arch maint-3.3-debug
set     petsc_lib $petsc_dir/$petsc_arch/lib
set     petsc_bin $petsc_dir/$petsc_arch/bin

prepend-path    PATH            $petsc_bin
prepend-path    LD_LIBRARY_PATH $petsc_lib
prepend-path    PYTHONPATH      $petsc_lib/python2.7/site-packages
setenv          PETSC_DIR       $petsc_dir
setenv          PETSC_ARCH      $petsc_arch

