#%Module1.0
proc ModulesHelp { } {
        global dotversion

        puts stderr "\tSets environment for fenics master with petsc-maint-3.4 using debugging."
}
module-whatis "Sets environment for FEniCS master with petsc-maint-3.4 using debugging."

prepend-path LD_LIBRARY_PATH "/usr/local/fenics/master/petsc-maint-3.4/debug/lib"
prepend-path PATH "/usr/local/fenics/master/petsc-maint-3.4/debug/bin"
prepend-path PKG_CONFIG_PATH "/usr/local/fenics/master/petsc-maint-3.4/debug/lib/pkgconfig"
prepend-path PYTHONPATH "/usr/local/fenics/master/petsc-maint-3.4/debug/lib/python2.7/site-packages:/usr/local/fenics/master/petsc-maint-3.4/debug/lib/python2.7/dist-packages"
prepend-path MANPATH "/usr/local/fenics/master/petsc-maint-3.4/debug/share/man"

# Special Mac variables
prepend-path DYLD_FRAMEWORK_PATH "/opt/local/Library/Frameworks"

module load petsc/maint-3.4/debug

