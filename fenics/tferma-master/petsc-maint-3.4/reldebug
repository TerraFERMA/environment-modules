#%Module1.0
proc ModulesHelp { } {
        global dotversion

        puts stderr "\tSets environment for fenics tferma-master with petsc-maint-3.4."
}
module-whatis "Sets environment for FEniCS tferma-master with petsc-maint-3.4 using debugging."

prepend-path LD_LIBRARY_PATH "/usr/local/fenics/tferma-master/petsc-maint-3.4/reldebug/lib"
prepend-path PATH "/usr/local/fenics/tferma-master/petsc-maint-3.4/reldebug/bin"
prepend-path PKG_CONFIG_PATH "/usr/local/fenics/tferma-master/petsc-maint-3.4/reldebug/lib/pkgconfig"
prepend-path PYTHONPATH "/usr/local/fenics/tferma-master/petsc-maint-3.4/reldebug/lib/python2.7/site-packages:/usr/local/fenics/tferma-master/petsc-maint-3.4/reldebug/lib/python2.7/dist-packages"
prepend-path MANPATH "/usr/local/fenics/tferma-master/petsc-maint-3.4/reldebug/share/man"

# Variable to help find dolfin-config.cmake
#setenv DOLFIN_CMAKE_CONFIG_PATH "/usr/local/FEniCS-rel/share/cmake"

# Special Mac variables
prepend-path DYLD_FRAMEWORK_PATH "/opt/local/Library/Frameworks"

module load petsc/maint-3.4/opt

